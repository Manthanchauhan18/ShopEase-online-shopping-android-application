<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile_of_user.Add_new_address"
    android:background="@color/screen_background"
    android:orientation="vertical">


    <!--    toolbar for add grocery start-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_white"
        android:elevation="2dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <!--        imageview for add grocery back button start-->
        <ImageView
            android:id="@+id/btn_admin_saved_address_new_address_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_white"
            android:padding="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp">

        </ImageView>
        <!--        imageview for add grocery back button close-->

        <!--        textview for add grocery text close-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Address"
            android:textSize="@dimen/toolbar_title"
            android:textColor="@color/toolbar_title_color"
            android:layout_marginLeft="10dp">

        </TextView>
        <!--        textview for add grocery text close-->

    </androidx.appcompat.widget.Toolbar>
    <!--    toolbar for add grocery close-->


    <!--    cardview for add grocery content start-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--        linearlayout for add upcoming smartphone content start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <!--                edittext for grocery name start-->
                <EditText
                    android:id="@+id/edit_profile_add_new_address_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Name"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
                <!--                edittext for groery name close-->
                <!--                edittext for grocery name start-->
                <EditText
                    android:id="@+id/edit_profile_add_new_address_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
                <!--                edittext for groery name close-->



                <!--                edittext for grocery name start-->
                <EditText
                    android:id="@+id/edit_profile_add_new_address_home_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="House No./Building"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
                <!--                edittext for groery name close-->

                <!--                edittext for grocery name start-->
                <EditText
                    android:id="@+id/edit_profile_add_new_address_Street_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Street Name/Socity Name"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
                <!--                edittext for groery name close-->

                <!--                edittext for grocery name start-->
                <EditText
                    android:id="@+id/edit_profile_add_new_address_Landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Landmark"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
                <!--                edittext for groery name close-->

                <!--                edittext for grocery name start-->
                <EditText
                    android:id="@+id/edit_profile_add_new_address_Pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pincode"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
                <!--                edittext for groery name close-->

                <!--                edittext for grocery name start-->
                <EditText
                    android:id="@+id/edit_profile_add_new_address_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
                <!--                edittext for groery name close-->

                <!--                textview for add grocery error message start-->
                <TextView
                    android:id="@+id/txt_profile_add_new_address_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black">

                </TextView>
                <!--                textview for add grocery error message close-->




                <!--            linearlayout for add grocery button start-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <!--                button for add grocery start-->
                    <Button
                        android:id="@+id/btn_profile_add_new_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:text="Add Address"
                        android:textAllCaps="false"
                        android:background="@color/toolbar_white"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="@dimen/admin_add_button_text">

                    </Button>
                    <!--                button for add grocery close-->

                </LinearLayout>
                <!--            linearlayout for add grocery button close-->

                <!--            progressbar for add grocery start-->
                <ProgressBar
                    android:id="@+id/profile_add_new_address_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyle"
                    android:layout_marginBottom="10dp"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:layout_gravity="center">


                </ProgressBar>
                <!--            progressbar for add grocery close-->




            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>




</LinearLayout>