<?xml version="1.0" encoding="utf-8"?>
<!--linearlayout of add product start-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screen_background"
    tools:context=".Admin_Section.AddProduct">

<!--    toolbar of add product start-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_white"
        android:elevation="2dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

<!--        imageview for add product back button start-->
        <ImageView
            android:id="@+id/btn_admin_add_product_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_white"
            android:padding="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp">

        </ImageView>
<!--        imageview for add product back button close-->

<!--        textview for add product text start-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:textSize="@dimen/toolbar_title"
            android:textColor="@color/toolbar_title_color"
            android:layout_marginLeft="10dp">

        </TextView>
<!--        textview for add product text close-->

    </androidx.appcompat.widget.Toolbar>
<!--    toolbar for add product close-->


<!--    cardview for add product content start-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

<!--        linearlayout for add product content start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

<!--            linearlayout for add product input section start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

<!--                edittext for add product name start-->
                <EditText
                    android:id="@+id/etAdaddname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name of the Product"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
<!--                edittext for add product name close-->

<!--                edittext for price start-->
                <EditText
                    android:id="@+id/etAdaddprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:background="@drawable/addgroceryroundedbutton"
                    android:layout_margin="10dp"
                    android:padding="10dp">


                </EditText>
<!--                edittext for price close-->

<!--                edittext for stock start-->
                <EditText
                    android:id="@+id/etAdaddstock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/addgroceryroundedbutton"
                    android:hint="Stock"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="20dp">


                </EditText>
<!--                edittext for stock close-->

<!--                button for select image of product start-->
                <Button
                    android:id="@+id/btAdaddimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Image of Product"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:background="@color/black"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/admin_add_button_text">

                </Button>
<!--                button for select image of product close-->

<!--                textview for error text start-->
                <TextView
                    android:id="@+id/txt_add_product_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black">

                </TextView>
<!--                textview for error text close-->

            </LinearLayout>
<!--            linearlayout for add product input section close-->


<!--            linearlayout for add product button start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

<!--                button for add product start-->
                <Button
                    android:id="@+id/btAdadditem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="Add Product"
                    android:textAllCaps="false"
                    android:background="@color/black"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/admin_add_button_text">

                </Button>
<!--                button for add product close-->

            </LinearLayout>
<!--            linearlayout for add product button close-->


<!--            progressbar for add product start-->
            <ProgressBar
                android:id="@+id/pbAdadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyle"
                android:scaleX=".5"
                android:scaleY=".5"
                android:layout_gravity="center">


            </ProgressBar>
<!--            progressbar for add product close-->




        </LinearLayout>
<!--        linearlayout for add product content close-->


    </androidx.cardview.widget.CardView>
<!--    cardview for add product content close-->

</LinearLayout>
<!--linearlayour for add product close-->