<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_Section.Add_electronic"
    android:orientation="vertical"
    android:background="@color/screen_background">


    <!--    toolbar for add upcoming smartphone back button start-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_white"
        android:elevation="2dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <!--        imageview for add upcoming smartphone back button start-->
        <ImageView
            android:id="@+id/btn_admin_add_electronics_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_white"
            android:padding="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp">

        </ImageView>
        <!--        imageview for add upcoming smartphone back button close-->

        <!--        textview for add upcoming smartphone text close-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Electronic"
            android:textSize="@dimen/toolbar_title"
            android:textColor="@color/toolbar_title_color"
            android:layout_marginLeft="10dp">

        </TextView>
        <!--        textview for add upcoming smartphone text close-->

    </androidx.appcompat.widget.Toolbar>
    <!--    toolbar for add upcoming smartphone close-->



    <!--    cardview for add upcoming smartphone content start-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--        linearlayout for add upcoming smartphone content start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">



                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--        linearlayout for add upcoming smartphone content start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <!--            linearlayout for add upcoming smartphone input start-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <!--                edittext for upcoming smartphone name start-->
                            <EditText
                                android:id="@+id/edit_admin_add_electronics_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Name of the Electronic Product"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:layout_margin="10dp"
                                android:padding="10dp"
                                android:background="@drawable/addgroceryroundedbutton">

                            </EditText>
                            <!--                edittext for upcoming smartphone name close-->

                            <!--                edittext for upcoming smartphone name start-->
                            <EditText
                                android:id="@+id/edit_admin_add_electronics_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Electronic Product Price"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:layout_margin="10dp"
                                android:padding="10dp"
                                android:background="@drawable/addgroceryroundedbutton">

                            </EditText>
                            <!--                edittext for upcoming smartphone name close-->

                            <EditText
                                android:id="@+id/edit_admin_add_electronics_rating"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Electronic Product Rating Out Of 5"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:layout_margin="10dp"
                                android:padding="10dp"
                                android:background="@drawable/addgroceryroundedbutton">

                            </EditText>

                            <EditText
                                android:id="@+id/edit_admin_add_electronics_stock"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Electronic Product stock"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:layout_margin="10dp"
                                android:padding="10dp"
                                android:background="@drawable/addgroceryroundedbutton">

                            </EditText>

                            <EditText
                                android:id="@+id/edit_admin_add_electronics_discription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:inputType="textMultiLine"
                                android:background="@drawable/addgroceryroundedbutton"
                                android:hint="Product Discription"
                                android:padding="10dp"
                                android:textSize="20sp"
                                android:gravity="top"
                                android:lines="10"
                                android:minLines="4"
                                android:maxLines="10"
                                android:scrollbars="vertical" />


                            <!--                button for select upcoming smartphone image start-->
                            <Button
                                android:id="@+id/btn_admin_add_electronics_select_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Select Image of Electronic Product"
                                android:textColor="#FFFFFF"
                                android:textAllCaps="false"
                                android:background="@color/black"
                                android:layout_margin="10dp"
                                android:textSize="@dimen/admin_add_button_text">

                            </Button>
                            <!--                button for select upcoming smartphone image close-->

                            <!--                textview for add upcoming smartphone error message start-->
                            <TextView
                                android:id="@+id/txt_add_electronics_error"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:textSize="15sp"
                                android:textColor="@color/black">

                            </TextView>
                            <!--                textview for add upcoming smartphone error message close-->


                        </LinearLayout>
                        <!--            linearlayout for add upcoming smartphone input close-->



                        <!--            linearlayout for add upcoming smartphone button start-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <!--                button for add upcoming smartphone start-->
                            <Button
                                android:id="@+id/btn_admin_add_electronics"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:text="Add Electronic Product"
                                android:textAllCaps="false"
                                android:background="@color/black"
                                android:layout_margin="10dp"
                                android:textSize="@dimen/admin_add_button_text">

                            </Button>
                            <!--                button for add upcoming smartphone close-->

                        </LinearLayout>
                        <!--            linearlayout for add upcoming smartphone button close-->


                        <!--            progressbar for add upcoming smartphone start-->
                        <ProgressBar
                            android:id="@+id/admin_add_electronics_progressbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyle"
                            android:scaleX=".5"
                            android:scaleY=".5"
                            android:layout_gravity="center">


                        </ProgressBar>
                        <!--            progressbar for add upcoming smartphone close-->


                    </LinearLayout>
                    <!--        linearlayout for add upcoming smartphone content close-->


                </ScrollView>





            </LinearLayout>

        </ScrollView>


    </androidx.cardview.widget.CardView>
    <!--    cardview for add upcoming smartphone content close-->



</LinearLayout>