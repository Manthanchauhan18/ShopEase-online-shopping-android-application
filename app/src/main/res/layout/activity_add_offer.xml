<?xml version="1.0" encoding="utf-8"?>
<!--linearlayout for add offer start-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_Section.Add_Offer"
    android:orientation="vertical"
    android:background="@color/screen_background">

<!--    toolbar for add offer start-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_white"
        android:elevation="2dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

<!--        imageview for add offer back button start-->
        <ImageView
            android:id="@+id/btn_admin_add_offers_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_white"
            android:padding="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp">

        </ImageView>
<!--        imageview for add offer back button close-->

<!--        textview for add offer text close-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Offers"
            android:textSize="@dimen/toolbar_title"
            android:textColor="@color/toolbar_title_color"
            android:layout_marginLeft="10dp">

        </TextView>
<!--        textview for add offer text close-->

    </androidx.appcompat.widget.Toolbar>
<!--    toolbar for add offer close-->



<!--    cardview for add offer content start-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

<!--        linearlayout for add offer content start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

<!--            linearlayout for add offer input start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

<!--                edittext for offer name start-->
                <EditText
                    android:id="@+id/edit_admin_add_offer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name of the Offer"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
<!--                edittext for offer name close-->

<!--                button for select offer image start-->
                <Button
                    android:id="@+id/btn_admin_add_offers_select_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Image of Offer"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:background="@color/black"
                    android:layout_margin="10dp"
                    android:textSize="20dp">

                </Button>
<!--                button for select offer image close-->

<!--                textview for add offer error message start-->
                <TextView
                    android:id="@+id/txt_add_offer_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="15sp"
                    android:textColor="@color/black">

                </TextView>
<!--                textview for add offer error message close-->


            </LinearLayout>
<!--            linearlayout for add offer input close-->



<!--            linearlayout for add offer button start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

<!--                button for add offer start-->
                <Button
                    android:id="@+id/btn_admin_add_offers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="Add Offer"
                    android:textAllCaps="false"
                    android:background="@color/black"
                    android:layout_margin="10dp"
                    android:textSize="20dp">

                </Button>
<!--                button for add offer close-->

            </LinearLayout>
<!--            linearlayout for add offer button close-->


<!--            progressbar for add offer start-->
            <ProgressBar
                android:id="@+id/admin_add_offers_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyle"
                android:scaleX=".5"
                android:scaleY=".5"
                android:layout_gravity="center">


            </ProgressBar>
<!--            progressbar for add offer close-->


        </LinearLayout>
<!--        linearlayout for add offer content close-->

    </androidx.cardview.widget.CardView>
<!--    cardview for add offer content close-->


</LinearLayout>
<!--linearlayout for add offer close-->