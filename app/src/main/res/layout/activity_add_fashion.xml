<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_Section.Add_Fashion"
    android:orientation="vertical"
    android:background="@color/screen_background">


    <!--    toolbar for add grocery start-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_white"
        android:elevation="2dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <!--        imageview for add grocery back button start-->
        <ImageView
            android:id="@+id/btn_admin_add_fashion_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_white"
            android:padding="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp">

        </ImageView>
        <!--        imageview for add grocery back button close-->

        <!--        textview for add grocery text close-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Fashion Product"
            android:textSize="@dimen/toolbar_title"
            android:textColor="@color/toolbar_title_color"
            android:layout_marginLeft="10dp">

        </TextView>
        <!--        textview for add grocery text close-->

    </androidx.appcompat.widget.Toolbar>
    <!--    toolbar for add grocery close-->



    <!--    cardview for add grocery content start-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--        linearlayout for add upcoming smartphone content start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">



                <!--        linearlayout for add grocery content start-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/cardview_white">

                    <!--            linearlayout for add grocery input start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <!--                edittext for grocery name start-->
                        <EditText
                            android:id="@+id/edit_admin_add_fashion_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name of the Fashion Product"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:background="@drawable/addgroceryroundedbutton">

                        </EditText>
                        <!--                edittext for groery name close-->

                        <!--                edittext for grocery name start-->
                        <EditText
                            android:id="@+id/edit_admin_add_fashion_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fashion Product Price"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:background="@drawable/addgroceryroundedbutton">

                        </EditText>
                        <!--                edittext for groery name close-->

                        <!--                edittext for upcoming smartphone name start-->
                        <EditText
                            android:id="@+id/edit_admin_add_fashion_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fashion Product Size"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:background="@drawable/addgroceryroundedbutton">

                        </EditText>
                        <!--                edittext for upcoming smartphone name close-->

                        <EditText
                            android:id="@+id/edit_admin_add_fashion_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fashion Product Rating Out Of 5"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:background="@drawable/addgroceryroundedbutton">

                        </EditText>

                        <EditText
                            android:id="@+id/edit_admin_add_fashion_stock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fashion stock"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:background="@drawable/addgroceryroundedbutton">

                        </EditText>


                        <EditText
                            android:id="@+id/edit_admin_add_fashion_discription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:inputType="textMultiLine"
                            android:background="@drawable/addgroceryroundedbutton"
                            android:hint="Product Discription"
                            android:padding="10dp"
                            android:textSize="20sp"
                            android:gravity="top"
                            android:lines="10"
                            android:minLines="4"
                            android:maxLines="10"
                            android:scrollbars="vertical" />


                        <!--                button for select grocery image start-->
                        <Button
                            android:id="@+id/btn_admin_add_fashion_select_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Image of Fashion Product"
                            android:textColor="#FFFFFF"
                            android:textAllCaps="false"
                            android:background="@color/black"
                            android:layout_margin="10dp"
                            android:textSize="@dimen/admin_add_button_text">

                        </Button>
                        <!--                button for select grocery image close-->

                        <!--                textview for add grocery error message start-->
                        <TextView
                            android:id="@+id/txt_add_fashion_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textSize="15sp"
                            android:textColor="@color/black">

                        </TextView>
                        <!--                textview for add grocery error message close-->


                    </LinearLayout>
                    <!--            linearlayout for add grocery input close-->



                    <!--            linearlayout for add grocery button start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <!--                button for add grocery start-->
                        <Button
                            android:id="@+id/btn_admin_add_fashion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:text="Add Fashion Product"
                            android:textAllCaps="false"
                            android:background="@color/black"
                            android:layout_margin="10dp"
                            android:textSize="@dimen/admin_add_button_text">

                        </Button>
                        <!--                button for add grocery close-->

                    </LinearLayout>
                    <!--            linearlayout for add grocery button close-->


                    <!--            progressbar for add grocery start-->
                    <ProgressBar
                        android:id="@+id/admin_add_fashion_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/progressBarStyle"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:layout_gravity="center">


                    </ProgressBar>
                    <!--            progressbar for add grocery close-->


                </LinearLayout>
                <!--        linearlayout for add grocery content close-->





            </LinearLayout>

        </ScrollView>


    </androidx.cardview.widget.CardView>
    <!--    cardview for add grocery content close-->







</LinearLayout>