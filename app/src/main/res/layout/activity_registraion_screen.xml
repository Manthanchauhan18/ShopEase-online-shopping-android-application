<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration_of_user.Registraion_Screen"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <!--        linearlayout for add upcoming smartphone content start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/background_wave_2">


                <!--    lottie animation tag-->
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="30dp"
                    app:lottie_rawRes="@raw/grocery_registration"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true">

                </com.airbnb.lottie.LottieAnimationView>
                <!--    lottie animation tag close-->

            </LinearLayout>



            <!--    holl lower part linear layout-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <!--        input linear layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp">

                    <!--            for name input-->
                    <EditText
                        android:id="@+id/edit_reg_name"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:ems="14"
                        android:background="@drawable/edit_text_background"
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:drawablePadding="10dp"
                        android:hint="Name"
                        android:textColor="@color/black"
                        android:elevation="3dp"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="7dp">

                    </EditText>
                    <!--            name input close-->

                    <!--            for email input-->
                    <EditText
                        android:id="@+id/edit_reg_email"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:ems="14"
                        android:background="@drawable/edit_text_background"
                        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                        android:drawablePadding="10dp"
                        android:hint="Email"
                        android:textColor="@color/black"
                        android:inputType="textEmailAddress"
                        android:elevation="3dp"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp">

                    </EditText>
                    <!--            email input close-->

                    <!--            for mobile input-->
                    <EditText
                        android:id="@+id/edit_reg_mobile"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:ems="14"
                        android:background="@drawable/edit_text_background"
                        android:drawableLeft="@drawable/ic_baseline_phone_24"
                        android:drawablePadding="10dp"
                        android:hint="Mobile"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:elevation="3dp"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp">

                    </EditText>
                    <!--            mobile input close-->

                    <!--            for password input-->
                    <EditText
                        android:id="@+id/edit_reg_password"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:ems="14"
                        android:background="@drawable/edit_text_background"
                        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                        android:drawablePadding="10dp"
                        android:hint="Password"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:elevation="3dp"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10dp"
                        android:drawableRight="@drawable/ic_baseline_eye_visibility_24"
                        android:fontFamily="@font/lato_bold">

                    </EditText>
                    <!--            password input close-->

                    <!--            for confirm password input-->
                    <EditText
                        android:id="@+id/edit_reg_confirm_password"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:ems="14"
                        android:background="@drawable/edit_text_background"
                        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                        android:drawablePadding="10dp"
                        android:hint="Confirm Password"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:elevation="3dp"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10dp"
                        android:drawableRight="@drawable/ic_baseline_eye_visibility_24"
                        android:fontFamily="@font/lato_bold">

                    </EditText>
                    <!--            confirm password input close-->

                    <!--            textview for error message start-->
                    <TextView
                        android:id="@+id/txt_registration_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="15sp">

                    </TextView>
                    <!--            textview for error close-->

                </LinearLayout>
                <!--        input linear layout close-->


                <!--        for registration and cancel button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">


                    <!--            registration button -->
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/btn_reg_register"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Register"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:background="@drawable/btn_login_shape">

                    </Button>
                    <!--            registration button close-->


                    <!--            cancel button -->
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/btn_reg_cancle"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:background="@drawable/btn_login_shape">

                    </Button>
                    <!--            cancel button close-->

                </LinearLayout>
                <!--        button linear layout close-->


                <!--        for progressbar linear layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <!--            progressbar-->
                    <ProgressBar
                        android:id="@+id/progressbar_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX=".5"
                        android:scaleY=".5">

                    </ProgressBar>
                    <!--            progressbar close-->


                </LinearLayout>
                <!--        progressbar linear layout close-->

            </LinearLayout>
            <!--    holl lower part linear layout close-->



        </LinearLayout>

    </ScrollView>


        </LinearLayout>
<!--main linear layout close-->