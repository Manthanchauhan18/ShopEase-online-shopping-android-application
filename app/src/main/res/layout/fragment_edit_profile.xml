<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile_of_user.Edit_profile"
    android:orientation="vertical"
    android:background="@color/screen_background">


    <!--    toolbar for add category start-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_white"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        android:elevation="2dp">

        <!--        imageview for add category back button start-->
        <ImageView
            android:id="@+id/btn_profile_edit_profile_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_white"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

        </ImageView>
        <!--        imageview for add category back button close-->

        <!--        textview for add category text close-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="@dimen/toolbar_title"
            android:textColor="@color/toolbar_title_color"
            android:layout_marginLeft="5dp">

        </TextView>
        <!--        textview for add category text close-->

    </androidx.appcompat.widget.Toolbar>
    <!--    toolbar for add category close-->


    <!--    cardview for add grocery content start-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--        linearlayout for add upcoming smartphone content start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <EditText
                    android:id="@+id/edittext_profile_edit_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Name"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton"
                    android:drawableRight="@drawable/ic_baseline_edit_24"
                    android:focusable="false"
                    android:clickable="true">

                </EditText>
                <!--                edittext for groery name close-->

                <EditText
                    android:id="@+id/edittext_profile_edit_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email id"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton"
                    android:focusable="false"
                    android:clickable="true">

                </EditText>
                <!--                edittext for groery name close-->

                <EditText
                    android:id="@+id/edittext_profile_edit_profile_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton"
                    android:drawableRight="@drawable/ic_baseline_edit_24"
                    android:focusable="false"
                    android:clickable="true">

                </EditText>
                <!--                edittext for groery name close-->

                <EditText
                    android:id="@+id/edittext_profile_edit_profile_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Old Password"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
                <!--                edittext for groery name close-->

                <EditText
                    android:id="@+id/edittext_profile_edit_profile_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
                <!--                edittext for groery name close-->

                <EditText
                    android:id="@+id/edittext_profile_edit_profile_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@drawable/addgroceryroundedbutton">

                </EditText>
                <!--                edittext for groery name close-->

                <!--                textview for add grocery error message start-->
                <TextView
                    android:id="@+id/txt_profile_edit_profile_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp">

                </TextView>
                <!--                textview for add grocery error message close-->



                <!--            linearlayout for add grocery button start-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp">

                    <!--                button for add grocery start-->
                    <Button
                        android:id="@+id/btn_edit_profile_save_changes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:text="Save Changes"
                        android:textAllCaps="false"
                        android:background="@color/toolbar_white"
                        android:layout_margin="10dp"
                        android:textSize="@dimen/admin_add_button_text">

                    </Button>
                    <!--                button for add grocery close-->

                </LinearLayout>
                <!--            linearlayout for add grocery button close-->
.

                <!--            progressbar for add grocery start-->
                <ProgressBar
                    android:id="@+id/profile_edit_profile_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyle"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">


                </ProgressBar>
                <!--            progressbar for add grocery close-->





            </LinearLayout>



        </ScrollView>

    </androidx.cardview.widget.CardView>



</LinearLayout>