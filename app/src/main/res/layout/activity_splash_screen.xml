<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:orientation="vertical"
    android:background="@color/white">

<!--    lottie animation tag-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/splash_screen_lottie"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:lottie_rawRes="@raw/shopping_cart"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="150dp"
        android:layout_marginRight="30dp">

    </com.airbnb.lottie.LottieAnimationView>
<!--    lottie animation tag close-->

<!--    text view shopease-->
    <TextView
        android:id="@+id/txt_splash_shopease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShopEase"
        android:fontFamily="@font/noto_serif_ahom_regular"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_gravity="center">

    </TextView>
<!--    textview shopease close-->

</LinearLayout>